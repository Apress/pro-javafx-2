var i = 1024;
var j = 2048;
var k = 15625;

println("i = {i}");
println("j = {j}");
println("k = {k}");

println("i + j = {i + j}");
println("i - j = {i - j}");
println("i * k = {i * k}");
println("k / i = {k / i}");
println("k mod j = {k mod j}");

var max = Integer.MAX_VALUE;
var min = Integer.MIN_VALUE;

println("max = {max}");
println("min = {min}");

println("max + 1 will overflow to {max + 1}");
println("min - 1 will overflow to {min - 1}");
println("max * min will overflow to {max * min}");

println("i = {i}, ++i = {++i}");
println("j = {j}, --j = {--j}");
println("k = {k}, k++ = {k++}");
println("k = {k}, k-- = {k--}");
